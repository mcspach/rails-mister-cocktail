<p id="notice"><%= notice %></p>

<h1>Cocktails</h1>

  <div class="container">
    <% @cocktails.each do |cocktail| %>
    <div class="my_card">
      <p class="name"><%= cocktail.name %></p>
      <ul class="flex">
        
    
        <li class="btn btn-outline-success my-2 my-sm-0 badge-pill"><%= link_to 'View Recipe', cocktail %></li>
        <li class="btn btn-outline-success my-2 my-sm-0 badge-pill"><%= link_to 'Delete', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></li>
      
      </ul>
    </div>
    <% end %>
    </div>

<br>

